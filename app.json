{
  "expo": {
    "name": "Ryt Bank",
    "slug": "odysseus-bank",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "odysseusbank",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.odysseusbank.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Ryt Bank uses Face ID to securely authenticate your transactions",
        "NSContactsUsageDescription": "Ryt Bank needs access to your contacts to enable DuitNow transfers"
      },
      "appleTeamId": "TDCXGVM5YR"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.odysseusbank.app",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "READ_CONTACTS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-local-authentication",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Ryt Bank to access your contacts for DuitNow transfers"
        }
      ]
    ]
  }
}
